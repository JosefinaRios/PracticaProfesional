<div class="container mt-5 text-center">
    <h2 class="fs-4">Reseñas de nuestros clientes</h2>
    <button class="boton mt-3" data-bs-toggle="modal" data-bs-target="#comentarioModal">
        Escribir una reseña
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="comentarioModal" tabindex="-1" aria-labelledby="comentarioModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="comentarioModalLabel">Escribir una reseña</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Comentarios" method="post">
                    <div class="mb-3">
                        <label for="NombreCliente" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NombreCliente" name="NombreCliente" required>
                    </div>
                    <div class="mb-3">
                        <label for="Mensaje" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="Mensaje" name="Mensaje" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <h3>Comentarios recientes</h3>
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <p>No hay comentarios disponibles.</p>
        }
        else{


            <div id="carouselComentarios" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count; i += 4)  // 4 comentarios por slide
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="d-flex justify-content-center gap-3">
                                @foreach (var comentario in Model.Skip(i).Take(4)) // Toma de 4 en 4
                                {

                                    <div class="card mx-2" style="width: 18rem;">
                                            <div class="card-body">
                                                <h5 class="card-title">@comentario.NombreCliente</h5>
                                                <p class="card-text">@comentario.Mensaje</p>
                                                <p class="text-muted">@comentario.Fecha.ToString("dd/MM/yyyy")</p>
                                                <a asp-controller="Comentarios" asp-action="Edit" asp-route-id="@comentario.ComentarioId">Editar</a>
                                                <a asp-controller="Comentarios" asp-action="Delete" asp-route-id="@comentario.ComentarioId">Eliminar</a>
                                            </div>
                                        </div>
                                    
                                }
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev custom-carousel-control carousel-dark" type="button" data-bs-target="#carouselComentarios" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next custom-carousel-control carousel-dark" type="button" data-bs-target="#carouselComentarios" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>
        }
    </div>
</div>







