@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}
<div class="container ">
 
    <div class="row  justify-content-center align-items-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post" autocomplete="off">
                    <h2>Use una cuenta local para iniciar sesion.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="nombre@ejemplo.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" placeholder="contraseña" />
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                   
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesion</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email confirmado</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
       
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>


